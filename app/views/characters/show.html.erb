<div class="page-header">
  <h3>Character #<%= @character.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Movie</dt>
      <dd><%= Movie.find(@character.movie_id).try(:title) %></dd>

      <dt>Actor</dt>
      <dd><%= Actor.find(@character.actor_id).try(:name) %></dd>

      <dt>Name</dt>
      <dd><%= @character.name %></dd>
      
      <dt>Add a New Movie</dt>
      <dd><a href="/movies/new">Add a New Movie</a></dd>
      
      <dt>Add a New Actor</dt>
      <dd><a href="/actors/new">Add a New Actor</a></dd>
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/characters" class="btn btn-primary">
        Back
      </a>
      <a href="/characters/<%= @character.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_character/<%= @character.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
